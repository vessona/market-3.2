<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aa"
    tools:context="com.example.admin.market.ui.LauncherActivity">

    <com.example.admin.market.ui.MyTextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="MarketApp"
        android:textSize="48.5sp"
        android:textColor="#ffffff"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:text="Find your favorite Farmer Market!"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textSize="17dp"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icons_container"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/btn_search"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/buttonround"
            android:text="@string/fa_icon_search"
            android:textSize="48.5sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_bookmarks"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_toEndOf="@+id/btn_search"
            android:background="@drawable/buttonround"
            android:text="@string/fa_icon_bookmark"
            android:textSize="48.5sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_search" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Retailer projects are bad" />

</RelativeLayout>
